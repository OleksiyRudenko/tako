{
  "name": "tako",
  "displayName": "Tako",
  "version": "0.0.2",
  "description": "Inline expandable file tree with file preview for github",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "start": "webpack --watch --mode=development"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": false,
    "jsxBracketSameLine": false,
    "bracketSpacing": true
  },
  "extensionManifest": {
    "name": "Tako â€” Github File Tree",
    "manifest_version": 2,
    "permissions": [
      "activeTab",
      "storage"
    ],
    "icons": {
      "16": "icon-16.png",
      "24": "icon-24.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "web_accessible_resources": [
      "tako.svg"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.github.com/*"
        ],
        "js": [
          "content-script.js"
        ],
        "run_at": "document_end"
      }
    ],
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "chrome": true
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "always-and-inside-groups",
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "curly": [
        "error",
        "all"
      ],
      "no-var": [
        "error"
      ],
      "prefer-template": [
        "error"
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "any"
        }
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "prefer-destructuring": [
        "error"
      ],
      "object-shorthand": [
        "error"
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "argsIgnorePattern": "^omit_",
          "varsIgnorePattern": "^omit_"
        }
      ],
      "no-unused-expressions": [
        "error",
        {
          "allowShortCircuit": false,
          "allowTernary": false
        }
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.7",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "file-loader": "^5.1.0",
    "generate-json-webpack-plugin": "^0.3.1",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-extension-reloader": "^1.1.4"
  },
  "dependencies": {
    "array-sort": "^1.0.0",
    "bottleneck": "^2.19.5",
    "immer": "^6.0.1",
    "is-binary-path": "^2.1.0",
    "lang-map": "^0.4.0",
    "react": "^0.0.0-experimental-8b155d261",
    "react-dom": "^0.0.0-experimental-8b155d261",
    "react-query": "^1.0.27",
    "react-svg-spinner": "^1.0.4",
    "react-syntax-highlighter": "^12.2.1",
    "react-use-hover": "^1.0.0",
    "styled-components": "^5.0.1",
    "use-timeout": "^1.1.0",
    "zip-webpack-plugin": "^3.0.0",
    "zustand": "^2.2.3"
  }
}
